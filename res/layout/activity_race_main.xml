<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mainbackup.RaceMainActivity"
    android:background="@drawable/utalogomain">

    <ImageView
        android:id="@+id/UtaLogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bGallery"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bFanWall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bEvents"
        android:layout_alignLeft="@+id/UtaLogo"
        android:text="Fan Wall" 
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/bNews"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bFanWall"
        android:layout_alignLeft="@+id/UtaLogo"
        android:onClick="onClick"
        android:text="News" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bNews"
        android:layout_alignLeft="@+id/bNews"
        android:layout_marginBottom="28dp" 
        android:onClick="onClickSlide"/>

    <Button
        android:id="@+id/bEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bFanWall"
        android:layout_alignParentBottom="true"
        android:text="Events"
        android:onClick="onClick"
        android:background="@android:color/holo_orange_dark"
        />

    <Button
        android:id="@+id/bGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bNews"
        android:layout_alignLeft="@+id/bNews"
        android:text="Gallery"
        android:onClick="onClick" />

</RelativeLayout>